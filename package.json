{
  "name": "bluecli",
  "version": "0.1.0",
  "description": "A CLI generator for CLIs, powered by commander.js with declarative configs and template engines.",
  "files": [
    "bin",
    "src",
    "templates",
    "cli.yaml"
  ],
  "bin": {
    "bluecli": "./bin/bluecli.js"
  },
  "type": "commonjs",
  "scripts": {
    "docs": "npx markdown-magic@3.7.0 **/*.md --config ./markdown-magic.config.js",
    "start": "node ./bin/bluecli.js",
    "dev": "nodemon ./bin/bluecli.js",
    "lint": "eslint .",
    "format": "prettier --write .",
    "prep": "npm run docs && npm run lint && npm run format",
    "test": "jest"
  },
  "scriptsMeta": {
    "docs": "Generate documentation from markdown files.",
    "start": "Run the CLI application.",
    "dev": "Run the CLI application in development mode with live reload.",
    "lint": "Lint all files in the project.",
    "format": "Format all files in the project.",
    "prep": "Prepare the project for a new release.",
    "test": "Run the test suite."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ioncakephper/bluecli.git"
  },
  "keywords": [
    "cli",
    "generator",
    "commander",
    "templates",
    "ejs",
    "handlebars",
    "yaml",
    "json",
    "declare"
  ],
  "author": "Ion Gireada",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ioncakephper/bluecli/issues"
  },
  "homepage": "https://github.com/ioncakephper/bluecli#readme",
  "dependencies": {
    "ajv": "^8.12.0",
    "commander": "^11.0.0",
    "ejs": "^3.1.9",
    "handlebars": "^4.7.8",
    "js-yaml": "^4.1.1"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-yml": "^1.10.0",
    "jest": "^29.7.0",
    "markdown-magic-install-extended": "^1.2.0",
    "markdown-magic-scripts": "^1.4.0",
    "markdown-magic-transform-acknowledgements": "^1.2.2",
    "markdown-magic-transform-badges": "^1.1.6",
    "markdown-magic-transform-treefile-extended": "^1.2.1",
    "nodemon": "^3.0.2",
    "prettier": "^3.2.5"
  }
}
